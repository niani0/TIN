<%- include('../../fragments/header.ejs') %>
        <main>
            <h2>Lista dostawców</h2>
            <table class="table-list">
                <thead>
                    <tr>
                        <th>Nazwa dostawcy</th>
                        <th>Email</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let supplier of suppliers) { %>
                    <tr>
                        <td><%= supplier.name %></td>
                        <td><%= supplier.email %></td>
                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a href="suppliers/details/<%=supplier.id%>" class="list-actions-button-details">Szczegóły</a>
                                </li>
                                <li>
                                    <a href="suppliers/edit/<%=supplier.id%>" class="list-actions-button-edit">Edytuj</a>
                                </li>
                                <li>
                                    <a href="suppliers/delete/<%=supplier.id%>" class="list-actions-button-delete">Usuń</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                    <% } %>
                </tbody>
            </table>
            <p><a href="suppliers/add" class="button-add">Dodaj nowego dostawce</a></p>
        </main>
<%- include('../../fragments/footer.ejs') %>