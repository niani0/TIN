<%- include('../../fragments/header.ejs') %>
        <main>
            <h2>Lista klientów</h2>
            <table class="table-list">
                <thead>
                    <tr>
                        <th>Imię</th>
                        <th>Nazwisko</th>
                        <th>Nazwa firmy</th>
                        <th>Akcje</th>
                    </tr>
                </thead>
                <tbody>
                <% for (let client of clients) { %>
                    <tr>
                        <td><%= client.name %></td>
                        <td><%= client.congomen %></td>
                        <td><%= client.company %></td>
                        <td>
                            <ul class="list-actions">
                                <li>
                                    <a href="clients/details/<%=client.id%>" class="list-actions-button-details">Szczegóły</a>
                                </li>
                                <li>
                                    <a href="clients/edit/<%=client.id%>" class="list-actions-button-edit">Edytuj</a>
                                </li>
                                <li>
                                    <a href="clients/delete/<%=client.id%>" class="list-actions-button-delete">Usuń</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
            <p><a href="clients/add" class="button-add">Dodaj nowego klienta</a></p>
        </main>
<%- include('../../fragments/footer.ejs') %>